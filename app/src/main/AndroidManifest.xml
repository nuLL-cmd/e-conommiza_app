<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.automatodev.e_conommiza_app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Econommiza_app">
        <activity android:name=".view.activity.AddItemActivity"
            android:theme="@style/Theme.Econommiza_app">

        </activity>
        <activity
            android:name=".view.activity.ProfileActivity"
            android:parentActivityName=".view.activity.ProfileActivity"
            android:theme="@style/Theme.Econommiza_app_two">

        </activity>
        <activity
            android:name=".view.activity.RegisterActivity"
            android:parentActivityName=".view.activity.RegisterActivity">

        </activity>
        <activity android:name=".view.activity.LoginActivity">

        </activity>
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:theme="@style/Theme.Econommiza_app_two" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>