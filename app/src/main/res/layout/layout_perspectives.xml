<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeDaddy_layoutPerspective"
        android:layout_height="match_parent"
        android:background="@drawable/bg_relative_data_main_two">


        <RelativeLayout
            android:id="@+id/relativeChildData_layoutPerspective"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_relative_data_main_two">


                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/recyclerItens_layoutPerspective"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/layout_items_main" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:id="@+id/relativeNoContent_layoutPerspective">

                <ImageView
                    android:layout_width="@dimen/_170sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_height="@dimen/_170sdp"
                    android:id="@+id/imgNoContent_layout_perspective"
                    android:src="@drawable/illustrator_vetor_tree" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_above="@id/imgNoContent_layout_perspective">

                    <TextView
                        android:id="@+id/txtTitleNoContent_layutPerspective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Tudo certo por aqui"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtMessageNoContent_lauyoutPerspective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comece adicionando novos items a sua lista"
                        android:layout_below="@+id/txtTitleNoContent_layutPerspective"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"/>


                </RelativeLayout>




            </RelativeLayout>




        </RelativeLayout>


    </RelativeLayout>
</layout>