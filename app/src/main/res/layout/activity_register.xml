<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:id="@+id/scrollDaddy_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout

            android:id="@+id/relativeDaddy_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            tools:context=".view.activity.RegisterActivity">


            <ImageButton
                android:id="@+id/btnBack_regoster"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_button_white_global"
                android:onClick="actRegisteLogin"
                android:src="@drawable/ic_arrow_back" />

            <LinearLayout
                android:id="@+id/linearDataAccount_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">

                <RelativeLayout
                    android:id="@+id/relativeLogo_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_40sdp">

                    <View
                        android:id="@+id/viewLogoOne_register"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_above="@id/linearLogo_register"
                        android:layout_alignStart="@id/linearLogo_register"
                        android:layout_alignLeft="@id/linearLogo_register"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="-2.8dp"
                        android:background="@drawable/bg_resources_logo" />

                    <View
                        android:id="@+id/viewLogoTwo_register"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_below="@id/linearLogo_register"
                        android:layout_alignStart="@id/linearLogo_register"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="-2.8dp"
                        android:background="@drawable/bg_resources_logo" />

                    <LinearLayout
                        android:id="@+id/linearLogo_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:id="@+id/relativeChar_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_resources_logo"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/lblCharLogo_register"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="E"
                                android:textColor="@color/white_fff"
                                android:textSize="@dimen/_20sdp" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/lblSlogan_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aldrich"
                            android:gravity="center"
                            android:text="conommiza :)"
                            android:textColor="@color/font_primary"
                            android:textSize="@dimen/_20sdp"

                            android:textStyle="bold" />


                    </LinearLayout>


                </RelativeLayout>


                <TextView
                    android:id="@+id/lblTitleLogin_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Crie sua conta!"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edtUser_register"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/layout_shadow_white"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="Usuário"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="#A2A2A2"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/edtEmail_register"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/layout_shadow_white"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="#A2A2A2"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/edtPassword_register"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/layout_shadow_white"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="@dimen/_5sdp"
                    android:hint="Senha"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="#A2A2A2"
                    android:textSize="@dimen/_10ssp" />


                <Button
                    android:id="@+id/btnLogin_register"
                    style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_button_blue_global"
                    android:elevation="@dimen/_10sdp"
                    android:onClick="actRegisterMain"
                    android:text="Registrar"
                    android:textColor="#fff"
                    android:textSize="@dimen/_11ssp" />


                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/spinkit_register"
                    style="@style/SpinKitView.Large.ThreeBounce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    app:SpinKit_Color="@color/button_positive" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSocial_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearDataAccount_register"
                android:gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">


                    <View
                        android:id="@+id/viewSeparatorSocial_register"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:background="#E2E0E0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ou faça login com"
                        android:id="@+id/lblSocial_register"
                        android:background="#fff"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_10ssp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/btnFacebook_register"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/bg_button_white_shadow_global"
                        android:onClick="loginFacebook"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_facebook_svg" />


                    <ImageButton
                        android:id="@+id/btnGoogle_register"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/bg_button_white_shadow_global"
                        android:onClick="loginGoogle"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_google_sgv" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</layout>
